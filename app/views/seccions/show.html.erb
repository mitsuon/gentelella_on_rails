<%= render "renders/pruebatop"%>
<h2>Ver Seccion</h2>
<%= render "renders/pruebamid"%>
<p id="notice"><%= notice %></p>

<form class="form-horizontal form-label-left">
  
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Sección </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @seccion.nombre %>">
    </div> 
  </div>
  
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Módulo </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @seccion.modulo.nombre %>">
    </div> 
  </div>
  
   <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Horas Laboratorio </label>
      <div class="col-md-9 col-sm-9 col-xs-12">
          <input type="text" class="form-control" disabled="disabled" placeholder="<%= @seccion.hrsLab %>">
      </div>
  </div>   
  
   <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Horas cátedra </label>
      <div class="col-md-9 col-sm-9 col-xs-12">
          <input type="text" class="form-control" disabled="disabled" placeholder="<%= @seccion.hrsCatedra %>">
      </div>
  </div> 


   <div class="ln_solid"></div>
    <div class="form-group">
      <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
         <%= link_to 'Editar', edit_seccion_path(@seccion), class: "btn btn-primary" %>
        <%= link_to 'Volver', seccions_path, class: "btn btn-default" %>
      </div>
    </div>

</form>
<%= render "renders/pruebabot"%>	