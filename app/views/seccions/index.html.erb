<%= render "renders/pruebatop"%>	
  <h2>Administrar Secciones</h2>
<%= render "renders/pruebamid"%>	

<table id="tabla_secciones" class="table table-striped projects">

  <thead>
    <tr>
      <th style="width: 1%">#</th>
      <th>Nombre Sección</th>
      <th>Módulo</th>
      <th>Plan</th>
      <th>Carrera</th>
      <th>Horas Laboratorio</th>
      <th>Horas Cátedra</th>
      <th>Accion</th>
    </tr>
  </thead>

  <tbody>
    <% @seccions.each do |seccion| %>
      <tr>
        <td>#</td>
        <td><%= seccion.nombre %></td>
        <td><%= seccion.modulo ? seccion.modulo.nombre : "Sin módulo asociado" %></td>
        <td><%= seccion.modulo.malla ? seccion.modulo.malla.plan  : "Sin plan asociado" %></td>
        <td><%= seccion.modulo.malla.respond_to?(:carrera) ?  seccion.modulo.malla.carrera.nombre : "Sin carrera asociada" %></td>
        <td><%= seccion.hrsLab %></td>
        <td><%= seccion.hrsCatedra %></td>

      <td>
          <%= link_to '<i class="fa fa-folder"></i> Ver'.html_safe, seccion, class: "btn btn-primary btn-xs"  %>
          <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_seccion_path(seccion), class: "btn btn-info btn-xs"  %>
          <%= link_to '<i class="fa fa-pencil"></i> Eliminar'.html_safe, seccion,method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs"  %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>
<div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= link_to 'Crear Sección', new_seccion_path, class: "btn btn-success"%>
    </div>
  </div>

