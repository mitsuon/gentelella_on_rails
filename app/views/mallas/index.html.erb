<%= render "renders/pruebatop"%>	
  <h2>Administrar Mallas</h2>
<%= render "renders/pruebamid"%>	
<p id="notice"><%= notice %></p>
<table id="tabla_malla" class="table table-striped projects">
  <thead>
    <tr>
      <th style="width: 1%" >#</th>
      <th style="width: 20%">Plan</th>
      <th style="width: 20%">Carrera asociada</th>
      <th style="width: 20%">#Accion</th>
    </tr>
  </thead>

  <tbody>
    <% @mallas.each do |malla| %>
      <tr>
        <td>#</td>
        <td><%= malla.plan %></td>
        <td><%= malla.carrera ? malla.carrera.nombre : "Sin carrera asociada" %></td>

        <td>
          <%= link_to '<i class="fa fa-folder"></i> Ver'.html_safe, malla, class: "btn btn-primary btn-xs"  %>
          <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_malla_path(malla), class: "btn btn-info btn-xs"  %>
          <%= link_to '<i class="fa fa-pencil"></i> Eliminar'.html_safe, malla,method: :delete, data: { confirm: '¿Seguro que desea eliminar?' }, class: "btn btn-danger btn-xs"  %>
        </td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

</br>

  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= link_to 'Crear Malla', new_malla_path, class: "btn btn-success"%>
    </div>
  </div>

<%= render "renders/pruebabot"%>

