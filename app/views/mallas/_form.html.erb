
<%= form_for(@malla,:html => {:class => 'form-horizontal form-label-left'}) do |f| %>

  <% if @malla.errors.any? %>
   <div id="error_explanation">
    <ul>
     <% @malla.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
   </div>
  <% end %>

  <div class="form-group">
    <%= f.label :plan, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
    <div class="col-md-9 col-sm-9 col-xs-12">
    <%= f.text_field :plan, :class => 'form-control' %>
    </div>
    
    </br>
    <%= f.label :carrera_id,:class =>'control-label col-md-3 col-sm-3 col-xs-12' %> <br>
    <div class="col-md-9 col-sm-9 col-xs-12">
    <%= f.select :carrera_id, Carrera.all.collect {|c| [ c.nombre, c.id ] }, {:include_blank => true}, {:class => 'form-control'}%>
    </div>
    
  </div>
  
   <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit class: "btn btn-primary" %>
        
        
<% end %>
