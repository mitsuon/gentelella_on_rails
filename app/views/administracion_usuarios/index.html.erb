  <h2>Administrar Usuarios</h2>
<%= render "renders/pruebamid"%>



<table id="tabla_usuarios" class="table table-striped projects">

  <thead>
    <tr>
      <th style="width: 1%">#</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Tipo</th>
      <th>Estado</th>
      <th>Accion</th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td>#</td>
        <td><%= usuario.nombre ? usuario.nombre : "-" %></td>
        <td><%= usuario.apellido ? usuario.apellido : "-" %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.tipo %></td>
        <td><strong><%= usuario.activo ? "Activo" : "Bloqueado" %></strong></td> 

      <td>
          <%= link_to '<i class="fa fa-check-circle"></i> Activar'.html_safe, administracion_usuarios_activar_path(usuario), class: "btn btn-primary btn-xs"  %>
          <%= link_to '<i class="fa fa-ban"></i> Bloquear'.html_safe, administracion_usuarios_bloquear_path(usuario), class: "btn btn-warning btn-xs"  %>
          <%= link_to '<i class="fa fa-remove"></i> Eliminar'.html_safe, administracion_usuarios_destroy_user_path(usuario),method: :delete, data: { confirm: '¿Seguro que desea eliminar este usuario?' }, class: "btn btn-danger btn-xs"  %>

      </td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>
