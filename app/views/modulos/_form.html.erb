<%= form_for(@modulo,:html => {:class => 'form-horizontal form-label-left'}) do |f| %>
  <% if @modulo.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @modulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
      <%= f.label :nombre, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.text_field :nombre, :class => 'form-control' %>
      </div>
  </div>
  
  
 <div class="form-group">
      <%= f.label :código, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.text_field :codigo, :class => 'form-control' %>
      </div>
  </div>
  
   <div class="form-group">
      <%= f.label :créditos, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.number_field :creditos, :class => 'form-control' %>
      </div>
  </div>
  
 <div class="form-group">
      <%= f.label :Nivel, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.number_field :nivel, :class => 'form-control' %>
      </div>
  </div>
    

 <div class="form-group">
    <%= f.label :malla_id,:class =>'control-label col-md-3 col-sm-3 col-xs-12' %> 
    <div class="col-md-9 col-sm-9 col-xs-12">
    <%= f.select :malla_id, Malla.all.collect {|c| [ c.plan, c.id ] }, {:include_blank => true}, {:class => 'form-control'}%>
    </div>
  </div>

 <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit class: "btn btn-primary" %>
  
 
<% end %>
