<%= render "renders/pruebatop"%>
<h2>Ver Módulo</h2>
<%= render "renders/pruebamid"%>
<p id="notice"><%= notice %></p>

<form class="form-horizontal form-label-left">
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Nombre </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @modulo.nombre %>">
    </div> 
  </div>
  
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Código </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @modulo.codigo %>">
    </div> 
  </div>
  
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Créditos </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @modulo.creditos %>">
    </div> 
  </div>


  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Nivel </label>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @modulo.nivel %>">
    </div> 
  </div>
  
   <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Plan </label>
    <% if @modulo.malla.nil?%>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="Sin Plan asociado">
    </div> 
    <% else %>
     <div class="col-md-9 col-sm-9 col-xs-12">
      <input type="text" class="form-control" disabled="disabled" placeholder="<%= @modulo.nivel %>">
    </div> 
    <% end %>
  </div>


   <div class="ln_solid"></div>
    <div class="form-group">
      <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
         <%= link_to 'Editar', edit_modulo_path(@modulo), class: "btn btn-primary" %>
        <%= link_to 'Volver', modulos_path, class: "btn btn-default" %>
      </div>
    </div>
  </form>

<%= render "renders/pruebabot"%>	