<%= render "renders/pruebatop"%>
<h2>Editar Usuario</h2>
<%= render "renders/pruebamid"%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,class: 'form-horizontal form-label-left' }) do |f| %>
  <%= devise_error_messages! %>

   <div class="form-group">
      <%= f.label :nombre, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.text_field :nombre, :class => 'form-control' %>
      </div>
  </div>
  
   <div class="form-group">
      <%= f.label :Apellido, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <%= f.text_field :apellido, :class => 'form-control' %>
      </div>
   </div>

   <div class="form-group">
      <div class="field">
        <%= f.label :email, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
        </div>
      </div>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :contraseña, :class =>'control-label col-md-3 col-sm-3 col-xs-12'  %> <i>(leave blank if you don't want to change it)</i><br />
    <div class="col-md-9 col-sm-9 col-xs-12">
      <%= f.password_field :password, autocomplete: "off" , :class => 'form-control'%>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> carácteres mínimos</em>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :confirmar_contraseña,:class =>'control-label col-md-3 col-sm-3 col-xs-12' %>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :Contraseña_actual, :class =>'control-label col-md-3 col-sm-3 col-xs-12' %> <i>(Necesaria para confirmar los cambios)</i>
    <div class="col-md-9 col-sm-9 col-xs-12">
      <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="ln_solid"></div>
    <div class="form-group">
      <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit "Actualizar", class: "btn btn-primary"  %>
 
<% end %>

<%= render "renders/pruebabot"%>